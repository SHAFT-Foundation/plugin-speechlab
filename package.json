{
  "name": "@elizaos/plugin-speechlab",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/elizaos/eliza"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/core": "^1.0.0-beta.41",
    "axios": "^1.6.0",
    "tsup": "8.4.0"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist .turbo node_modules .turbo-tsconfig.json tsconfig.tsbuildinfo",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "lint": "prettier --write ./src",
    "demo": "tsx demo.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:integration": "SPEECHLAB_INTEGRATION_TEST=true vitest run src/integration.test.ts",
    "test:manual": "node test-integration.js",
    "typecheck": "tsc --noEmit"
  },
  "publishConfig": {
    "access": "public"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "SPEECHLAB_EMAIL": {
        "type": "string",
        "description": "Email for SpeechLab account."
      },
      "SPEECHLAB_PASSWORD": {
        "type": "string",
        "description": "Password for SpeechLab account."
      },
      "SPEECHLAB_SOURCE_LANGUAGE": {
        "type": "string",
        "description": "Optional. Source language code. Defaults to 'en'."
      },
      "SPEECHLAB_UNIT_TYPE": {
        "type": "string",
        "description": "Optional. Unit type for dubbing. Defaults to 'whiteGlove'."
      },
      "SPEECHLAB_VOICE_MATCHING_MODE": {
        "type": "string",
        "description": "Optional. Voice matching mode. Defaults to 'source'."
      },
      "SPEECHLAB_MAX_WAIT_TIME_MINUTES": {
        "type": "string",
        "description": "Optional. Maximum time to wait for project completion (minutes). Defaults to 60."
      },
      "SPEECHLAB_CHECK_INTERVAL_SECONDS": {
        "type": "string",
        "description": "Optional. Interval between status checks (seconds). Defaults to 30."
      },
      "SPEECHLAB_DEBUG": {
        "type": "string",
        "description": "Optional. Enable debug logging (true/false). Defaults to false."
      }
    }
  },
  "devDependencies": {
    "@types/node": "^20.8.4",
    "prettier": "3.5.3",
    "tsx": "^4.7.0",
    "typescript": "^5.8.2",
    "vitest": "^1.0.0",
    "@vitest/coverage-v8": "^1.0.0"
  }
} 